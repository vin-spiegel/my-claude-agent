{
  "name": "claude-local-agent",
  "version": "1.0.0",
  "private": true,
  "description": "Local agent built with Claude Agent SDK and OpenRouter",
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm --filter @agent/repl dev",
    "dev:ink": "pnpm --filter @agent/ink dev",
    "dev:web": "pnpm --filter @agent/web dev",
    "dev:api": "pnpm --filter @agent/core exec tsx src/server.ts",
    "dev:village": "npx concurrently -n api,web -c blue,green \"pnpm dev:api\" \"pnpm dev:web\"",
    "build": "pnpm -r build"
  },
  "keywords": [
    "claude",
    "agent",
    "openrouter",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/ui": "^4.0.18",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  }
}
